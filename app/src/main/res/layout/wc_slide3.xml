<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/wc_bg3">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/wc_image_width"
            android:layout_height="@dimen/wc_image_width"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/wc_title3"
            android:textColor="@color/white"
            android:textSize="@dimen/wc_slide_title"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingStart="@dimen/wc_desc_padding"
            android:paddingEnd="@dimen/wc_desc_padding"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:text="@string/wc_desc3"
            android:textSize="@dimen/wc_slide_desc" />

    </LinearLayout>
</RelativeLayout>