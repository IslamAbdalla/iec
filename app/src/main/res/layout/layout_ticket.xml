<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="8dip"
    android:layout_marginLeft="8dip"
    android:layout_marginRight="8dp"
    app:cardElevation="2dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/ticket_event_root"
        android:focusable="true"
        android:clickable="true"
        android:background="?android:attr/selectableItemBackground">
        <View
            android:layout_width="10dp"
            android:layout_height="84dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:background="@color/colorAccent"
            android:id="@+id/color_bar"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ticket_event_name"
            android:text="Event Name"
            android:textColor="#444"
            android:padding="10dip"
            android:textSize="18sp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@id/color_bar"
            android:gravity="center"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/sepGray"
            android:layout_below="@id/ticket_event_name"
            android:layout_toEndOf="@id/color_bar"
            android:id="@+id/ticket_sep"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ticket_event_reg_code"
            android:text="Click to view"
            android:textColor="#666"
            android:padding="6dip"
            android:textSize="14sp"
            android:layout_below="@id/ticket_sep"
            android:layout_toEndOf="@id/color_bar"
            android:gravity="center"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>
